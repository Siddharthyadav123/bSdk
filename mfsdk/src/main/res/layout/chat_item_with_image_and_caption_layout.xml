<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_item_with_image_buttons_and_caption_layout_rly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.morfeus.android.mfsdk.ui.widget.bubble.SelectableRoundedImageView
        android:id="@+id/iv_sender_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/chat_item_distance_top_bottom"
        android:layout_marginLeft="@dimen/bot_margin_left"
        android:layout_marginRight="@dimen/bot_margin_right"
        android:background="@drawable/bot"
        android:visibility="visible" />


    <com.morfeus.android.mfsdk.ui.widget.bubble.CurveRelativeLayout
        android:id="@+id/rl_body_Layout"
        android:layout_width="@dimen/chat_card_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_item_distance_top_bottom"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/chat_item_distance_top_bottom"
        android:background="@drawable/layout_bg_with_gray_border_drawable">

        <RelativeLayout
            android:id="@+id/rl_image_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_image_height">

            <com.morfeus.android.mfsdk.ui.widget.bubble.MfNetworkImageView
                android:id="@+id/iv_header_image"
                android:layout_width="@dimen/chat_card_width"
                android:layout_height="@dimen/header_image_height"
                android:layout_margin="0.8dp"
                android:scaleType="fitXY" />

            <com.morfeus.android.mfsdk.ui.widget.bubble.MfMediaStatusView
                android:id="@+id/image_downloader_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_main_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_image_container"
            android:layout_marginBottom="@dimen/chat_item_heading_bottom_margin"
            android:layout_marginLeft="@dimen/chat_item_left_margin"
            android:layout_marginRight="@dimen/chat_item_right_margin"
            android:layout_marginTop="@dimen/chat_item_heading_top_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textColor="@color/textHeadingColor"
            android:textSize="@dimen/chat_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sub_heading_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_heading"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/chat_item_left_margin"
            android:layout_marginRight="@dimen/chat_item_right_margin"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/textSubHeadingColor"
            android:textSize="@dimen/chat_item_subheading_text_size" />


        <LinearLayout
            android:id="@+id/ll_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_sub_heading_one"
            android:layout_marginTop="0dp"
            android:gravity="bottom|right"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:gravity="right|center"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="Button 1"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="gone" />


            <Button
                android:id="@+id/btn_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:gravity="right|center"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="Button 2"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:gravity="right|center"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="Button 3"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:gravity="right|center"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:text="Button 4"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_five"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:gravity="right|center"
                android:maxLines="1"
                android:paddingRight="8dp"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="gone" />

        </LinearLayout>


    </com.morfeus.android.mfsdk.ui.widget.bubble.CurveRelativeLayout>


</LinearLayout>
