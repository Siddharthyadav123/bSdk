<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_item_btn_temp_layout_lin_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.morfeus.android.mfsdk.ui.widget.bubble.SelectableRoundedImageView
        android:id="@+id/iv_sender_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/chat_item_distance_top_bottom"
        android:layout_marginLeft="@dimen/bot_margin_left"
        android:layout_marginRight="@dimen/bot_margin_right"
        android:background="@drawable/bot"
        android:visibility="visible" />


    <com.morfeus.android.mfsdk.ui.widget.bubble.CurveRelativeLayout
        android:id="@+id/rl_body_layout"
        android:layout_width="@dimen/chat_card_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/chat_item_distance_top_bottom"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/chat_item_distance_top_bottom"
        android:background="@drawable/layout_bg_with_gray_border_drawable">

        <LinearLayout
            android:id="@+id/ll_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/chat_item_heading_bottom_margin"
                android:layout_marginLeft="@dimen/chat_item_left_margin"
                android:layout_marginRight="@dimen/chat_item_right_margin"
                android:layout_marginTop="@dimen/chat_item_heading_top_margin"
                android:fontFamily="sans-serif"
                android:maxLines="3"
                android:textColor="@color/textHeadingColor"
                android:textSize="@dimen/chat_item_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sub_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/chat_item_bottom_margin"
                android:layout_marginLeft="@dimen/chat_item_left_margin"
                android:layout_marginRight="@dimen/chat_item_right_margin"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="@color/textSubHeadingColor"
                android:textSize="@dimen/chat_item_subheading_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_text_container"
            android:layout_marginTop="16dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chat_item_button_height"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/Blue"
                android:visibility="visible" />

        </LinearLayout>


    </com.morfeus.android.mfsdk.ui.widget.bubble.CurveRelativeLayout>


</LinearLayout>
