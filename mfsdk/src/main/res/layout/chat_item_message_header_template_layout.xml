<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/containerRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_upperedges_curvey_drawable"
        android:visibility="visible">


        <com.morfeus.android.mfsdk.ui.widget.bubble.SelectableRoundedImageView
            android:id="@+id/profileImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_image_height"
            android:scaleType="centerCrop"
            android:src="@drawable/banner2"
            android:visibility="visible"
            app:sriv_left_bottom_corner_radius="0dp"
            app:sriv_left_top_corner_radius="@dimen/roundEdges"
            app:sriv_right_bottom_corner_radius="0dp"
            app:sriv_right_top_corner_radius="@dimen/roundEdges" />

        <TextView
            android:id="@+id/todaysNewsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/chat_item_left_right_margin_left"
            android:layout_marginTop="35dp"
            android:text="Classic T-Shirt Collection"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_item_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/presidentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/todaysNewsTextView"
            android:layout_marginLeft="@dimen/chat_item_left_right_margin_left"
            android:text="See all our colors\npetersendreceiveapp.ngrok.io"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_item_text_size" />

        <TextView
            android:id="@+id/tvreadMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/presidentTextView"
            android:layout_marginLeft="@dimen/chat_item_left_right_margin_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn_drawable"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="View"
            android:textColor="@color/white"
            android:textSize="@dimen/chat_item_text_size" />

    </RelativeLayout>

</RelativeLayout>
