<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_control_frame"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/drwable_download_circle">

        <!--   <com.morfeus.android.mfsdk.ui.widget.bubble.CircularProgressBar
               android:id="@+id/pb_progress_bar"
               style="@style/Widget.ProgressBar.Holo.CircularPro2"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_gravity="center"
               android:indeterminateOnly="false"
               android:indeterminateTint="@android:color/white"
               app:cpb_backgroundColor="#00000000" />/>-->

        <ProgressBar
            android:id="@+id/pb_progress_bar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_gravity="center" />


        <ImageView
            android:id="@+id/iv_cancel_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_btn_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/ic_action_download_light"
            android:visibility="visible" />


    </FrameLayout>

</RelativeLayout>
